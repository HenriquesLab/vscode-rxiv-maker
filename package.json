{
  "name": "rxiv-maker",
  "displayName": "Rxiv-Maker",
  "description": "VS Code extension for scientific manuscript authoring with rxiv-maker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "markdown",
    "latex",
    "academic",
    "scientific",
    "publishing",
    "citations",
    "bibliography"
  ],
  "activationEvents": [
    "onLanguage:rxiv-markdown",
    "workspaceContains:**/00_CONFIG.yml",
    "workspaceContains:**/01_MAIN.md",
    "workspaceContains:**/03_REFERENCES.bib"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rxiv-markdown",
        "aliases": [
          "Rxiv Markdown",
          "rxiv-markdown"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rxiv-markdown",
        "scopeName": "text.html.markdown.rxiv",
        "path": "./syntaxes/rxiv-markdown.tmLanguage.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "00_CONFIG.yml",
        "url": "./schemas/config-schema.json"
      }
    ],
    "commands": [
      {
        "command": "rxiv-maker.insertCitation",
        "title": "Insert Citation",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertFigureReference",
        "title": "Insert Figure Reference",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.validateProject",
        "title": "Validate Project Structure",
        "category": "Rxiv-Maker"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
