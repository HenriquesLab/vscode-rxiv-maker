{
  "name": "rxiv-maker",
  "displayName": "Rxiv-Maker",
  "description": "Enhanced toolkit for scientific manuscript authoring with rxiv-maker, including Python code execution, blindtext support, and comprehensive linting",
  "version": "0.3.4",
  "publisher": "HenriquesLab",
  "icon": "icon.png",
  "license": "MIT",
  "homepage": "https://github.com/HenriquesLab/vscode-rxiv-maker#readme",
  "bugs": {
    "url": "https://github.com/HenriquesLab/vscode-rxiv-maker/issues"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "markdown",
    "latex",
    "tex",
    "academic",
    "scientific",
    "publishing",
    "citations",
    "bibliography",
    "python",
    "dynamic-content",
    "blindtext",
    "rxiv-maker",
    "manuscript",
    "references"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriquesLab/vscode-rxiv-maker.git"
  },
  "activationEvents": [
    "workspaceContains:**/*.rxm",
    "workspaceContains:**/01_MAIN.md",
    "workspaceContains:**/02_SUPPLEMENTARY_INFO.md"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "rxiv-markdown",
        "aliases": [
          "Rxiv-Markdown",
          "rxiv-markdown"
        ],
        "extensions": [
          ".rxm"
        ],
        "filenames": [
          "01_MAIN.md",
          "02_SUPPLEMENTARY_INFO.md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[rxiv-markdown]": {
        "editor.wordWrap": "on"
      }
    },
    "grammars": [
      {
        "language": "rxiv-markdown",
        "scopeName": "source.rxiv-markdown",
        "path": "./syntaxes/rxiv-markdown.tmLanguage.json"
      }
    ],
    "tokenColors": [
      {
        "scope": [
          "markup.subscript",
          "markup.superscript"
        ],
        "settings": {
          "foreground": "#A0A0A0"
        }
      },
      {
        "scope": "keyword.control.newpage.rxiv",
        "settings": {
          "foreground": "#569CD6"
        }
      },
      {
        "scope": "keyword.control.placeholder.blindtext.rxiv",
        "settings": {
          "foreground": "#C586C0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "entity.name.function.blindtext.rxiv",
        "settings": {
          "foreground": "#DCDCAA"
        }
      },
      {
        "scope": "keyword.control.embedded.python.rxiv",
        "settings": {
          "foreground": "#4EC9B0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "keyword.control.embedded.tex.rxiv",
        "settings": {
          "foreground": "#FF7F50",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "source.tex.embedded.rxiv",
        "settings": {
          "foreground": "#D4D4D4"
        }
      },
      {
        "scope": "punctuation.definition.embedded.begin.rxiv",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "punctuation.definition.embedded.end.rxiv",
        "settings": {
          "foreground": "#4EC9B0"
        }
      },
      {
        "scope": "source.python.embedded.rxiv",
        "settings": {
          "foreground": "#D4D4D4"
        }
      },
      {
        "scope": "keyword.control.import.python.rxiv",
        "settings": {
          "foreground": "#C586C0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "entity.name.type.module.python.rxiv",
        "settings": {
          "foreground": "#4FC1FF"
        }
      },
      {
        "scope": "keyword.control.variable.set.python.rxiv",
        "settings": {
          "foreground": "#9CDCFE",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "keyword.control.variable.get.python.rxiv",
        "settings": {
          "foreground": "#DCDCAA",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "keyword.control.variable.global.python.rxiv",
        "settings": {
          "foreground": "#FF6B6B",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "variable.other.readwrite.python.rxiv",
        "settings": {
          "foreground": "#9CDCFE"
        }
      },
      {
        "scope": "variable.other.readwrite.global.python.rxiv",
        "settings": {
          "foreground": "#FF8C94"
        }
      },
      {
        "scope": "keyword.operator.assignment.python.rxiv",
        "settings": {
          "foreground": "#D4D4D4"
        }
      },
      {
        "scope": "string.quoted.context.name.python.rxiv",
        "settings": {
          "foreground": "#CE9178"
        }
      },
      {
        "scope": "string.quoted.format.spec.python.rxiv",
        "settings": {
          "foreground": "#D7BA7D"
        }
      },
      {
        "scope": "keyword.control.conditional.python.rxiv",
        "settings": {
          "foreground": "#C586C0",
          "fontStyle": "bold"
        }
      },
      {
        "scope": "string.quoted.double.conditional.python.rxiv",
        "settings": {
          "foreground": "#98C379"
        }
      },
      {
        "scope": "punctuation.separator.conditional.python.rxiv",
        "settings": {
          "foreground": "#D4D4D4"
        }
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "00_CONFIG.yml",
        "url": "./schemas/config-schema.json"
      }
    ],
    "commands": [
      {
        "command": "rxiv-maker.insertCitation",
        "title": "Insert citation",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertFigureReference",
        "title": "Insert figure reference",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertTableReference",
        "title": "Insert table reference",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertEquationReference",
        "title": "Insert equation reference",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.installRxivMaker",
        "title": "Install rxiv-maker",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.makeValidate",
        "title": "Validate manuscript",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.makePdf",
        "title": "Generate PDF",
        "category": "Rxiv-Maker",
        "icon": {
          "light": "./icons/rxiv-pdf.svg",
          "dark": "./icons/rxiv-pdf.svg"
        }
      },
      {
        "command": "rxiv-maker.makeClean",
        "title": "Clean generated files",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.makeAddBibliography",
        "title": "Add bibliography entry from DOI",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertBlindtext",
        "title": "Insert blindtext placeholder",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertBlindtextParagraph",
        "title": "Insert blindtext paragraph",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonBlock",
        "title": "Insert Python code block",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonInline",
        "title": "Insert inline Python expression",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonImport",
        "title": "Insert Python module import",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonFromImport",
        "title": "Insert Python from-import statement",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonSet",
        "title": "Insert Python variable assignment",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonGet",
        "title": "Insert Python variable retrieval",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonContext",
        "title": "Insert Python context execution",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonFormat",
        "title": "Insert Python formatted output",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonGlobal",
        "title": "Insert Python global variable",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertPythonIf",
        "title": "Insert Python conditional statement",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertTexBlock",
        "title": "Insert TeX code block",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.insertTexInline",
        "title": "Insert inline TeX code",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.validateDocument",
        "title": "Validate current document",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.clearDiagnostics",
        "title": "Clear all diagnostics",
        "category": "Rxiv-Maker"
      },
      {
        "command": "rxiv-maker.validateAllDocuments",
        "title": "Validate all open documents",
        "category": "Rxiv-Maker"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == rxiv-markdown",
          "command": "rxiv-maker.makePdf",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": {
      "title": "Rxiv-Maker",
      "properties": {
        "rxiv-maker.showStatusBarButton": {
          "type": "boolean",
          "default": true,
          "description": "Show PDF build button in status bar"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "NODE_NO_WARNINGS=1 vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "punycode": "npm:punycode@^2.3.1",
    "xml2js": "^0.5.0"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
