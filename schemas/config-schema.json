{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rxiv-Maker Configuration Schema",
  "description": "Schema for 00_CONFIG.yml file in rxiv-maker projects",
  "type": "object",
  "required": ["title", "authors"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the manuscript"
    },
    "short_title": {
      "type": "string",
      "description": "Short title for headers"
    },
    "authors": {
      "type": "array",
      "description": "List of authors",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Author's full name"
          },
          "affiliation": {
            "type": "string",
            "description": "Author's affiliation"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Author's email address"
          },
          "corresponding": {
            "type": "boolean",
            "description": "Whether this author is corresponding"
          },
          "orcid": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9X]$",
            "description": "ORCID identifier"
          }
        }
      }
    },
    "affiliations": {
      "type": "array",
      "description": "List of institutional affiliations",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Institution name"
          },
          "address": {
            "type": "string",
            "description": "Institution address"
          },
          "department": {
            "type": "string",
            "description": "Department or division"
          }
        }
      }
    },
    "abstract": {
      "type": "string",
      "description": "Abstract text"
    },
    "keywords": {
      "type": "array",
      "description": "List of keywords",
      "items": {
        "type": "string"
      }
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Publication date"
    },
    "journal": {
      "type": "string",
      "description": "Target journal name"
    },
    "acknowledgments": {
      "type": "string",
      "description": "Acknowledgments text"
    },
    "funding": {
      "type": "string",
      "description": "Funding information"
    },
    "conflicts": {
      "type": "string",
      "description": "Conflict of interest statement"
    },
    "ethics": {
      "type": "string",
      "description": "Ethics statement"
    },
    "data_availability": {
      "type": "string",
      "description": "Data availability statement"
    },
    "code_availability": {
      "type": "string",
      "description": "Code availability statement"
    },
    "bibliography": {
      "type": "object",
      "description": "Bibliography settings",
      "properties": {
        "style": {
          "type": "string",
          "description": "Citation style",
          "enum": ["numeric", "author-year", "alpha"]
        },
        "file": {
          "type": "string",
          "description": "Path to bibliography file",
          "default": "03_REFERENCES.bib"
        }
      }
    },
    "format": {
      "type": "object",
      "description": "Output format settings",
      "properties": {
        "paper_size": {
          "type": "string",
          "enum": ["a4", "letter", "a3"],
          "default": "a4"
        },
        "margin": {
          "type": "string",
          "pattern": "^\\d+(\\.\\d+)?(in|cm|mm|pt)$",
          "description": "Page margins"
        },
        "line_spacing": {
          "type": "number",
          "minimum": 1,
          "maximum": 3,
          "description": "Line spacing multiplier"
        },
        "font_size": {
          "type": "string",
          "enum": ["10pt", "11pt", "12pt"],
          "default": "11pt"
        },
        "columns": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3,
          "default": 1
        }
      }
    },
    "preprint": {
      "type": "object",
      "description": "Preprint server settings",
      "properties": {
        "server": {
          "type": "string",
          "enum": ["arxiv", "biorxiv", "medrxiv", "chemrxiv"],
          "description": "Target preprint server"
        },
        "subject": {
          "type": "string",
          "description": "Subject classification"
        },
        "license": {
          "type": "string",
          "enum": ["CC0", "CC BY", "CC BY-SA", "CC BY-NC", "CC BY-NC-SA"],
          "description": "License type"
        }
      }
    }
  }
}