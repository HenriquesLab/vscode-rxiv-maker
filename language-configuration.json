{
  "comments": {
    "lineComment": "//",
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "<",
      "close": ">"
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string"]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": ["string", "comment"]
    },
    {
      "open": "`",
      "close": "`",
      "notIn": ["string", "comment"]
    },
    {
      "open": "$",
      "close": "$",
      "notIn": ["string", "comment"]
    },
    {
      "open": "~",
      "close": "~",
      "notIn": ["string", "comment"]
    },
    {
      "open": "^",
      "close": "^",
      "notIn": ["string", "comment"]
    }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["$", "$"],
    ["~", "~"],
    ["^", "^"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*[}>]\\s*$",
    "decreaseIndentPattern": "^\\s*[<{]\\s*$"
  }
}
